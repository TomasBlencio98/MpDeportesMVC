@model ShoeSizeVm
@{
    ViewData["Title"] = "Size Assignment";
}

<h1 class="display-4 text-center fw-bold">Size Assignment</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form method="post" asp-action="AddSize">
    <input type="hidden" asp-for="ShoeId" />
    <input type="hidden" asp-for="Brand" />
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>

    <!-- Shoe Details -->
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Brand.BrandName" class="form-label">Brand</label>
                <input asp-for="Brand.BrandName" type="text" class="form-control" disabled />
            </div>
            <div class="mb-3">
                <label asp-for="Colour.ColourName" class="form-label">Colour</label>
                <input asp-for="Colour.ColourName" type="text" class="form-control" disabled />
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Genre.GenreName" class="form-label">Genre</label>
                <input asp-for="Genre.GenreName" type="text" class="form-control" disabled />
            </div>
            <div class="mb-3">
                <label asp-for="Sport.SportName" class="form-label">Sport</label>
                <input asp-for="Sport.SportName" type="text" class="form-control" disabled />
            </div>
        </div>
    </div>

    <!-- Size and Stock Selection -->
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="SizeId" class="form-label">Select a Size</label>
                <select asp-for="SizeId" class="form-select" asp-items="Model.Sizes"></select>
                <span asp-validation-for="SizeId" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Stock" class="form-label">Stock Quantity</label>
                <input asp-for="Stock" type="number" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="text-center mt-3">
        <button type="submit" class="btn btn-primary">Save Size and Stock</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

